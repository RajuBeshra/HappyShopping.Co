{%- if settings.show_customer_login and shop.customer_accounts_enabled -%}
	{% render 'halo-customer-login-sidebar' %}
{%- endif -%}

{% if settings.header_layout == '02' or settings.header_layout == '11' %}
	{%- if settings.enable_multilang_shopify or settings.enable_currencies -%}
		{% render 'halo-language-currency-sidebar' %}
	{%- endif -%}
{%- endif -%}

{%- if settings.show_quick_cart -%}
	{% unless template contains 'cart' %}
		{% render 'halo-cart-sidebar' %}
	{% endunless %}
{%- endif -%}

{% if settings.show_before_you_leave %}
	{% render 'halo-before-you-leave' %}
{% endif %}

{% render 'halo-sidebar-search' %}

{% if settings.header_layout == '04' and settings.mobile_menu == 'default' %}
	{% render 'halo-sidebar-menu-vertical' %}
{% else %}
	{% render 'halo-sidebar-menu' %}
{% endif %}