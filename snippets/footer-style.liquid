<style>
    {%- liquid
        assign footer_top_bg = section.settings.footer_top_bg
        assign footer_top_bg_gradient = section.settings.footer_top_bg_gradient

        assign footer_top_bg = section.settings.footer_top_bg
        assign footer_top_color = section.settings.footer_top_color_link
        assign footer_top_color_hover = section.settings.footer_top_color_link_hover
        assign footer_top_title_color = section.settings.footer_top_title_color
        assign footer_top_bg_img = section.settings.footer_top_bg_img | img_url: 'master'
        assign footer_top_bg_position_x =  section.settings.footer_top_bg_position_x
        assign footer_top_bg_position_y =  section.settings.footer_top_bg_position_y
        assign footer_top_bg_repeat =  section.settings.footer_top_bg_repeat
        assign footer_top_bg_attachment =  section.settings.footer_top_bg_attachment
        assign footer_top_bg_size =  section.settings.footer_top_bg_size

        assign footer_bottom_bg = section.settings.footer_bottom_bg
        assign footer_bottom_bg_gradient = section.settings.footer_bottom_bg_gradient
        assign footer_bottom_color = section.settings.footer_bottom_color

        assign pdtop_footerTop = section.settings.pdtop_footer_top
        assign pdbottom_footerTop = section.settings.pdbottom_footer_top
        assign pdtop_footerBottom = section.settings.pdtop_footer_bottom
        assign pdbottom_footerBottom = section.settings.pdbottom_footer_bottom

        assign social_color = section.settings.social_color
        assign social_border_color = section.settings.social_border_color
        assign social_background_color = section.settings.social_background_color
        assign social_background_color_gradient = section.settings.social_background_color_gradient

        assign social_color_hover = section.settings.social_color_hover
        assign social_border_color_hover = section.settings.social_border_color_hover
        assign social_background_color_hover = section.settings.social_background_color_hover
        assign social_background_color_gradient_hover = section.settings.social_background_color_gradient_hover
        assign social_box_hover_color = section.settings.social_box_hover_color

        assign social_icon_width = section.settings.social_icon_width
        assign social_icon_padding = section.settings.social_icon_padding
        assign social_icon_border_width = section.settings.social_icon_border_width
        assign social_icon_margin_right = section.settings.social_icon_margin_right
        assign social_position = section.settings.social_position | plus: 0
        assign column_reverse = section.settings.column_reverse

        assign payment_position = section.settings.payment_position | plus: 0

        assign spacing_input = block_newsletter.settings.spacing_input

        assign bg_color_promotion = section.settings.bg_color_promotion
        assign color_content_text = section.settings.color_content_text

        assign button_color_register = section.settings.button_color_register
        assign button_color_border_register = section.settings.button_color_border_register
        assign button_color_bg_register = section.settings.button_color_bg_register
        assign button_color_bg_gradient_register = section.settings.button_color_bg_gradient_register

        assign button_color_hover_register = section.settings.button_color_hover_register
        assign button_color_border_hover_register = section.settings.button_color_border_hover_register
        assign button_color_bg_hover_register = section.settings.button_color_bg_hover_register
        assign button_color_bg_gradient_hover_register = section.settings.button_color_bg_gradient_hover_register
    -%}

    .footer-block__item {
        margin-bottom: var(--block-margin-bottom);
    }

    .footer__content-top {
        {% if block_newsletter.settings.enable_top == false %}
        padding-top: {{ pdtop_footerTop | append: 'px' }};
        {% else %}
        padding-top: 0;
        {% endif %}
        padding-bottom: {{ pdbottom_footerTop | append: 'px' }};
        {% if section.settings.enable_border_footer_top %}
        border-top: 5px solid {{ section.settings.border_footer_top_color }};
        {% endif %}
    }

    .footer-02 .footer__content-top {
        padding-top: {{ pdtop_footerTop | append: 'px' }};
        padding-bottom: {{ pdbottom_footerTop | append: 'px' }};
    }

    .footer-03 .footer__content-top {
        {% if section.settings.enable_border_footer_top %}
            border-top: 1px solid {{ section.settings.border_footer_top_color }};
        {% endif %}
    }

    .footer__content-bottom {% if settings.footer_layout == '02' %}.footer__bottom{% endif %} {
        padding-top: {{ pdtop_footerBottom | append: 'px' }};
        padding-bottom: {{ pdbottom_footerBottom | append: 'px' }};
        {% if section.settings.border_top %}
        border-top: 1px solid {{ section.settings.border_top_color }};
        {% endif %}
    }

    .footer-03 .footer__content-text {
        background: {{ bg_color_promotion }};
    }

    .footer-03 .footer__content-text .footer_text-wrapper p {
        color: {{ color_content_text }};
    }

    .footer-03 .footer__content-text .footer_text-wrapper a.button {
        color: {{ button_color_register }};
        border: 1px solid {{ button_color_border_register }};
        {% if button_color_bg_gradient_register != blank %}
            background: {{ button_color_bg_gradient_register }};
        {% else %}
            background-color: {{ button_color_bg_register }};
        {% endif %}
    }

    .footer-03 .footer-block__details .rte h3,
    .footer-03 .footer-block__newsletter .footer-block__subheading .icon {
        fill: {{ footer_top_title_color }};
    }

    {% if footer_top_bg != 'rgba(0,0,0,0)' and footer_top_bg != blank %}
        .footer__content-top{
            background: {% if footer_top_bg_gradient != blank %}{{ footer_top_bg_gradient }}{% else %}{{ footer_top_bg }}{% endif %};
        }
    {% endif %}

    {% if footer_top_title_color != 'rgba(0,0,0,0)' and footer_top_title_color != blank %}
        .footer-block__column .footer-block__heading,
        .footer-block__newsletter .footer-block__heading,
        .footer-block__newsletter .footer-block__subheading .text-store {
            color: {{ footer_top_title_color }};
        }
    {% endif %}

    {% if footer_top_color != 'rgba(0,0,0,0)' and footer_top_color != blank %}
        .list-menu__item--link,
        .footer-block__details,
        .footer-block__details a,
        .footer-block__newsletter .footer-block__subheading,
        .footer-block__newsletter .footer-block__subheading a {
            color: {{ footer_top_color }};
        }
    {% endif %}

    {% if footer_top_bg_img != blank and section.settings.show_footer_top_bg_img %}
        .footer__content-top.footer__content-bg{
            background: url({{ footer_top_bg_img }});
            background-position: {{ footer_top_bg_position_x }} {{ footer_top_bg_position_y }};
            background-repeat: {{ footer_top_bg_repeat }};
            background-attachment: unset;
            background-size: {{ footer_top_bg_size }};
        }
    {% endif %}

    {% if footer_bottom_bg != 'rgba(0,0,0,0)' and footer_bottom_bg != blank %}
        .footer__content-bottom{
            background: {% if footer_bottom_bg_gradient != blank %}{{ footer_bottom_bg_gradient }}{% else %}{{ footer_bottom_bg }}{% endif %};
        }
    {% endif %}

    {% if footer_bottom_color != 'rgba(0,0,0,0)' and footer_bottom_color != blank %}
        .copyright__content{
            color: {{ footer_bottom_color }};
        }
    {% endif %}

    .footer-block__list-social .list-social__item{
        margin-right: {{ social_icon_margin_right | append: 'px' }};
    }

    .footer-block__list-social .list-social__link {
        color: {{ social_color }} !important;
        background: {% if social_background_color_gradient != blank %}{{ social_background_color_gradient }}{% else %}{{ social_background_color }}{% endif %};
        border: {{ social_icon_border_width | append: 'px' }} solid {{ social_border_color }};
        padding: {{ social_icon_padding | append: 'px' }};
    }

    .footer-block__list-social .list-social__link svg {
        fill: {{ social_color }} !important;
        width: {{ social_icon_width | append: 'px' }} !important;
        height: {{ social_icon_width | append: 'px' }} !important;
    }

    {% if social_position == 5 %}
        {% if column_reverse %}
            .footer-block__list-social .list-social__item{
                margin: 5px 24px 6px 0;
            }
            .footer-block__list-social .list-social{
                margin-left: -6px;
            }
        {% endif %}
    {% endif %}

    .footer-block__list-social .list-social__link:before {
        box-shadow: 0 0 0 2px {{ social_box_hover_color }};
    }

    .footer-block__newsletter .footer-block__newsletter-form {
        max-width: {{ block_newsletter.settings.newsletter_form_width | append: 'px' }};
    }

    .footer-block__newsletter .footer-block__newsletter-form #NewsletterForm--footer {
        border-radius: {{ block_newsletter.settings.newsletter_form_radius | append: 'px' }};
    }

    {% if block_newsletter != blank %}
        .footer-block__newsletter {
            {% if block_newsletter.settings.enable_top %}
            padding-top: {{ pdtop_footerTop | append: 'px' }};
            {% endif %}
            margin-bottom: {{ block_newsletter.settings.newsletter_margin_bottom | append: 'px' }};
            padding-bottom: {{ block_newsletter.settings.newsletter_padding_bottom | append: 'px' }};
            {% if block_newsletter.settings.enable_border_bottom %}
            border-{% if block_newsletter.settings.newsletter_style == 'style1' %}bottom{%else%}right{%endif%}: 1px solid {{ block_newsletter.settings.border_block_color }};
            {% endif %}
        }
        
        .footer-block__newsletter .footer-block__subheading {
            margin-bottom: {{ block_newsletter.settings.mg_bottom_des | append: 'px' }};
        }

        .wrapper-top-content {
            margin-bottom: {{ block_newsletter.settings.newsletter_margin_bottom | append: 'px' }};
            border-{% if block_newsletter.settings.newsletter_style == 'style1' %}bottom{%else%}right{%endif%}: 1px solid {{ block_newsletter.settings.border_block_color }};
        }

        .wrapper-top-content .footer-block__newsletter {
            margin-bottom: 0;
        }
    {% endif %}


    {% if payment_position == 4 %}
        .footer-block__list-social .list-social__item{
            margin: 0 10px 6px 0;
        }
    {% endif %}

    {% if social_border_color == 'rgba(0,0,0,0)' %}
        .footer-block__list-social .list-social {
            margin-left: -13px;
        }

        body.layout_rtl .footer-block__list-social .list-social {
            margin-right: -13px;
            margin-left: 0px;
        }
    {% endif %}

    .footer-block__newsletter .footer-block__newsletter-form .field {
        margin-right: {{ spacing_input | append: 'px' }};
    }

    @media (max-width: 1024px){
        {% if social_position == 1 %}
            .footer-block__list-social .list-social__item{
                margin: 0 7px 6px 0;
            }
        {% endif %}
    }

    @media (max-width: 767px){
        {% if footer_top_bg != 'rgba(0,0,0,0)' and footer_top_bg != blank %}
            {% if footer_top_title_color != 'rgba(0,0,0,0)' and footer_top_title_color != blank %}
                .footer-block__mobile .footer-block__heading{
                    border-color: {{ footer_top_title_color }};
                }

                .footer-block__mobile .footer-block__heading:before,
                .footer-block__mobile .footer-block__heading:after{
                    background-color: {{ footer_top_title_color }};
                }
            {% endif %}
        {% endif %}
    }

    @media (max-width: 550px){
        {% if footer_top_bg != 'rgba(0,0,0,0)' and footer_top_bg != blank %}
            {% if footer_top_title_color != 'rgba(0,0,0,0)' and footer_top_title_color != blank %}
                .footer-block__mobile .footer-block__heading{
                    border-color: {{ footer_top_title_color }};
                }

                .footer-block__mobile .footer-block__heading:before,
                .footer-block__mobile .footer-block__heading:after{
                    background-color: {{ footer_top_title_color }};
                }
            {% endif %}
        {% endif %}

        {% if payment_position == 4 %}
            .footer-block__list-payment ul{
                text-align: left;
            }
        {% endif %}

        {% if settings.header_layout == '01' %}
            .footer__content-top {
                padding-bottom: 0px;
            }
        {% endif %}
    }

    @media (min-width: 1025px){
        .footer-block__list-social .list-social__link:hover{
            color: {{social_color_hover}};
            border-color: {{social_border_color_hover}};
            background: {% if social_background_color_gradient_hover != blank %}{{ social_background_color_gradient_hover }}{% else %}{{ social_background_color_hover }}{% endif %};
        }

        .footer-block__list-social .list-social__link:hover svg{
            fill: {{social_color_hover}} !important;
        }

        {% if footer_top_bg != 'rgba(0,0,0,0)' and footer_top_bg != blank %}
            {% if footer_top_color_hover != 'rgba(0,0,0,0)' and footer_top_color_hover != blank %}
                .list-menu__item--link:hover{
                    color: {{ footer_top_color_hover }};
                }
            {% endif %}
        {% endif %}

        {% if footer_top_bg_img != blank %}
            .footer__content-top.footer__content-bg{
                background-attachment: {{ footer_top_bg_attachment }};
            }
        {% endif %}

        .footer-03 .footer__content-text .footer_text-wrapper a.button:hover {
            color: {{ button_color_hover_register }};
            border: 1px solid {{ button_color_border_hover_register }};
            {% if button_color_bg_gradient_hover_register != blank %}
                background: {{ button_color_bg_gradient_hover_register }};
            {% else %}
                background-color: {{ button_color_bg_hover_register }};
            {% endif %}
        }
    }

    @media (min-width: 1800px){
        {% if social_position == 5 %}
          {% if column_reverse %}
              .footer__payment .list-payment{
                  padding-right: 30px;
              }
          {% endif %}
        {% endif %}
    }

    @media (min-width: 767px) {
        .footer-03 .footer-block__newsletter .footer-block__subheading {
            margin-top: {{ block_newsletter.settings.mg_top_des | append: 'px' }};
        }
    }
</style>