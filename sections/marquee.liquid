{%- if section.blocks.size > 0 -%}
    {{ 'section-marquee.css' | asset_url | stylesheet_tag }}

    {%- liquid
        assign padding_top = section.settings.padding_top
        assign padding_bottom = section.settings.padding_bottom
        assign background = section.settings.background
        assign text_size = section.settings.text_size
        assign gap_blocks = section.settings.gap_blocks
        assign icon = section.settings.icon
        assign icon_color = section.settings.icon_color
    -%}
    
    <div class="marquee"
        style="--padding-top: {{ padding_top | append: 'px' }};
        --padding-bottom: {{ padding_bottom | append: 'px' }};
        --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 | append: 'px' }};
        --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 | append: 'px' }};
        --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 | append: 'px' }};
        --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 | append: 'px' }};
        --background: {{ background }};
        --text-size: {{ text_size }}px;
        --gap-blocks: {{ gap_blocks | times: 0.5 | append: 'px' }};
        --icon-color: {{ icon_color }}"
    >
        <div class="marquee__list">
            {% case section.blocks.size %}
            {% when 1 %}
                {%- for i in (1..10) -%}
                    {%- liquid
                        assign text = section.blocks[0].settings.text
                        assign color = section.blocks[0].settings.color
                    -%}
                    {%- if icon != 'none' -%}
                        <span class="marquee__icon">
                            {%- if icon == 'thunder' -%}
                                {% render 'icon-thunder' %}
                            {%- elsif icon == 'fire' -%}
                                {% render 'icon-fire-2' %}
                            {%- endif -%}
                        </span>
                    {%- endif -%}
                    {%- if text != blank -%}
                        <span class="marquee__item" style="--color: {{ color }}">
                            {{ text }}
                        </span>
                    {%- endif -%}
                {%- endfor -%}
            {% when 2 %}
                {%- for i in (1..10) -%}
                    {%- liquid
                        assign number = forloop.index | modulo : 2
                        if number == 0
                            assign text = section.blocks[1].settings.text
                            assign color = section.blocks[1].settings.color
                        else
                            assign text = section.blocks[0].settings.text
                            assign color = section.blocks[0].settings.color
