{% schema %}
    {
        "name": "t:sections.marquee.name",
        "max_blocks": 5,
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "id": "background",
                "type": "color_background",
                "label": "t:settings_schema.colors.settings.colors_name.background_color"
            },
            {
                "type": "range",
                "id": "text_size",
                "label": "t:settings_schema.typography.settings.typography.text_font_size",
                "min": 10,
                "max": 60,
                "step": 1,
                "unit": "t:sections.layout.fontsize.fontsize_title.unit",
                "default": 40
            },
            {
                "type": "range",
                "id": "gap_blocks",
                "label": "t:sections.marquee.settings.gap_blocks",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "t:sections.layout.fontsize.fontsize_title.unit",
                "default": 20
            },
            {
                "type": "select",
                "id": "icon",
                "label": "t:settings_schema.typography.settings.typography.icon",
                "default": "thunder",
                "options": [
                    {
                        "value": "none",
                        "label": "None"
                    },
                    {
                        "value": "thunder",
                        "label": "Thunder"
                    },
                    {
                        "value": "fire",
                        "label": "Fire"
                    }
                ]
            },
            {
                "type": "color",
                "id": "icon_color",
                "default": "#000000",
                "label": "t:settings_schema.typography.settings.typography.icon_color"
            },
            {
                "type": "header",
                "content": "t:sections.main-product.settings.general.spacing"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "t:sections.main-list-collections.settings.spacing.mg_top",
                "default": 20
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "t:sections.main-list-collections.settings.spacing.mg_bottom",
                "default": 20
            }
        ],
        "blocks": [
            {
                "type": "marquee",
                "name": "t:sections.marquee.blocks.name",
                "settings": [
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:settings_schema.general.settings.global_checkbox.label__2",
                        "default": "<p>Welcome to our store</p>"
                    },
                    {
                        "type": "color",
                        "id": "color",
                        "default": "#000000",
                        "label": "t:settings_schema.colors.settings.colors_name.color"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "t:sections.marquee.presets.name",
                "blocks": [
                    {
                        "type": "marquee"
                    },
                    {
                        "type": "marquee"
                    },
                    {
                        "type": "marquee"
                    }
                ]
            }
        ]
    }
{% endschema %}